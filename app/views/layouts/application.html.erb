<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
        <div calss ="container">
        <header>
          <div class =row>
            <div class="col-lg-3">
                <span class ="navbar-brand">Bookers</span>
            </div>
            
            <div class ="col-lg-9">
              <% if user_signed_in? %>
              <nav>
                <ul class="nav navbar-nav">
                  <li class="nav-list-item">
                    <%= link_to "Home", user_path(current_user.id), {class: "glyphicon glyphicon-home home"} %>
                    </li>
                    <li class="nav-list-item">
                    <%= link_to "Users", users_path , {class: "glyphicon glyphicon-user user"} %>
                    </li>
                    <li class="nav-list-item">
                    <%= link_to "Books", books_path , {class: "glyphicon glyphicon-book books"} %>
                    </li>
                    <li class="nav-list-item">
                      <%= link_to "logout", destroy_user_session_path, class: "glyphicon glyphicon-log-out logout", method: :delete %>
                    </li>
                </ul>
              <% else %>
                <ul class="nav navbar-nav">
                    <li class="nav-list-item">
                    <%= link_to "Home", root_path ,{class: "glyphicon glyphicon-home home"} %>
                    </li>
                    <li class="nav-list-item">
                    <%= link_to "About", home_about_path , {class: "glyphicon glyphicon-link about"} %>
                    </li>
                    <li class="nav-list-item"><%= link_to "sign up", new_user_registration_path, {class: "glyphicon glyphicon-edit sign_up"} %></li>
                    <li class="nav-list-item"> <%= link_to "login", new_user_session_path, {class: "glyphicon glyphicon-log-out logout"}  %></li>
                </ul>
              </nav>
              <% end %>
              </div>
            </div>
    </header>
    </div>
    <%= render 'layouts/notifications' %>
    <%= yield %>
  </body>
</html>
