<div class ="container">
    <div class="row">
      <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
        <div class="col-xs-3">
        <%= render 'users/info', user: @user %>
        <%= render 'books/new', book: @book %>
    </div>

<div class="col-xs-9">
<h2>Users</h2>
    <table class = "table">
    <thead>
        <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @users.each do |user| %>
        <tr>
        <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg' , fallback: "no_image.jpg" %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user)%></td>
        </tr>
        <% end %>
    </tbody>
    </table>
    </div>
</div>